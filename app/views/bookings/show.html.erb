<section class="py-5 show-booking">
  <div class="container px-4 px-lg-5 my-5 ">
      <div class="row gx-4 gx-lg-5 align-items-center">
          <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="https://blogs.incarail.com/hubfs/Imported_Blog_Media/CuscoRainBlog-1.png" alt="..." /></div>
          <div class="col-md-6">
              <h1 class=""><%= @bookings.tour.title_tour %></h1>
              <div class="fs-5 mb-4">
                  <h4 class="text-decoration-line-through">Precio: S/<%= @bookings.tour.price %></h4>
              </div>
              <div class="fs-5 mb-4">
                  <h4 class="text-decoration-line-through">Fecha: <%= @bookings.start_date %> <%= @bookings.start_date %></h4>
              </div>
              <div class="fs-5 mb-4">
                  <h4 class="text-decoration-line-through">Acompañantes: <%= @bookings.quantity %> persona(s)</h4>
              </div>
              <p class="lead text-justify"><%= @bookings.tour.description %></p>
              <div class="d-flex justify-content-around">
                  <%= link_to 'Editar', edit_booking_path, :class => "visible text-dark fas fa-pencil-alt"%>
                  <%= link_to 'Eliminar', booking_path(@bookings), :class => "visible text-dark fas fa-times btn btn-primary", method: :delete, data: {confirm: "Seguro?"}%>
              </div>
          </div>
      </div>

  </div>
