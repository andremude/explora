<div class="container">
  <div class=""><img class="card-img-top mb-5 mb-md-0" src="https://blogs.incarail.com/hubfs/Imported_Blog_Media/CuscoRainBlog-1.png" alt="..." /></div>
    <%= simple_form_for @booking do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <%= f.input :start_date,label: 'Fecha a reservar', placeholder: '22/10/2010' %>
    <%= f.input :quantity,label: 'Cantidad de reservas', placeholder: '1' %>
    <%= f.button :submit ,'Reservar ahora', class: "btn btn-success p-3 w-100 rounded" %>
  <% end %>
</div>
