<div class="row p-4 contenedor-booking" style="min-height:calc(100vh - 353px - 215px - 30px); box-sizing:border-box;">
  <% @bookings.each do |booking| %>
    <section class="py-5 col-md-6">
      <div class="card p-2 card-booking">
          <div class="row gx-4 gx-lg-5 align-items-center">
              <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="https://images.unsplash.com/photo-1571492913849-fdc97148242d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80" alt="..." /></div>
              <div class="col-md-6">
                  <h1 class = "m-3 text-center"><strong> <%= booking.tour.title_tour %> </strong></h1>
                  <p class = "text-justify mt-3 p-2"  style=""><%= booking.tour.description %></p>
                  <div class = "d-flex">
                  </div>
                  <div class="flex">
                   <div>
                      <p class="price m-3"> Precio por persona: <strong>$<%= booking.tour.price %></strong></p>
                      <p class="side-note m-3">Experiencia para: <strong><%= booking.quantity %> persona(s)</strong></p>
                      <p class= "m-3">Fecha del tour: <%= booking.start_date %></p>
                      <div class="reviews m-3">
                          <i class="fas fa-star"></i>
                          <i class="fas fa-star"></i>
                          <i class="fas fa-star"></i>
                          <i class="fas fa-star"></i>
                          <i class="fas fa-star"></i>
                          <span class="amount"> 28 reviews </span>
                      </div>
                    </div>
                      <%= link_to "Ver Más", booking_path(booking), :class => "btn btn-lg" %>
                    </div>
              </div>
          </div>
      </div>
    </section>
  <% end %>
</div>
