<div class="container">
  <div class="wrapper d-flex justify-content-center mt-5">
     <% @bookings.each do |booking| %>
        <div class="booking-card-wrapper">
          <div class="booking-card-image">
              <img class="booking-card-image" src="https://images.unsplash.com/photo-1571492913849-fdc97148242d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80" />
          </div>
          <div class="booking-card-content">
              <div class="booking-card-description">
              <%# ingresamos a la informacion de tour gracias al id que tenemos en booking %>
                  <h1><%= booking.tour.title_tour %></h1>
                  <p><%= booking.tour.description %></p>
              </div>

              <div class="booking-card-details">
                  <div class="flex">
                      <div>
                          <p class="price"> Precio por persona: <strong>$<%= booking.tour.price %></strong></p>
                          <p class="side-note">Experiencia para: <strong><%= booking.quantity %> persona(s)</strong></p>
                          <p>Fecha del tour: <%= booking.start_date %></p>
                          <div class="reviews">
                              <i class="fas fa-star"></i>
                              <i class="fas fa-star"></i>
                              <i class="fas fa-star"></i>
                              <i class="fas fa-star"></i>
                              <i class="fas fa-star"></i>
                              <span class="amount"> 28 reviews </span>
                          </div>
                      </div>
                      <div class="col-3 d-flex flex-column right-align mr-5 mt-3">
                          <button class="btn-primary mb-4"> Ver Reserva </button>
                          <div class="edit-and-destroy d-flex justify-content-around">
                            <a href="#" class="visible text-dark"><i class="fas fa-pencil-alt"></i> Editar</a>
                            <a href="#" class="visible text-dark"><i class="fas fa-times"></i> Eliminar</a>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
