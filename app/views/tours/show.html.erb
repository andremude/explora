            <div class="card-container py-3">
              <i class="far fa-heart" id="card-heart"></i>
              <%= cl_image_tag e.photos.first.key, height: 300, width: 400, crop: :fill %>
              <div class="card-content" style="height: 38%;">
                <div class="d-flex flex-column">
                  <div class="flex-grow-1">
