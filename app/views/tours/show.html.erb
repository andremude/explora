                      <div class="profile-pic">
                        <% if review.user.photo.attached?%>
                          <%= cl_image_tag review.user.photo.key, class: "profile-pic", id:"navbarDropdown", data: { toggle: "dropdown" },'aria-haspopup': true, 'aria-expanded': false %>
