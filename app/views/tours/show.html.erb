            <div class="card-body">
             <p style="font-size: 16px;"> <%= @tour.expectation %> </p>
            </div>
          </div>
        </div>
        <div class="accordion-card">
          <div class="accordion-card-header" id="headingFour">
            <h2 class="mb-0 border-bottom" style="font-size: 24px;">
