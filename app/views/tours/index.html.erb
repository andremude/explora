<div class="row">
  <div class="col-7">
    <div class="container tour-index">
    <% @tours.each do |tour| %>
      <div class="row card-tour mt-4 pt-5 pb-5">
        <div class="col-3 d-flex justify-content-center align-items-center ">

            <% tour.photos.each do |photo| %>
              <%= cl_image_tag photo.key,:style => "width:100%;"  %>
              <%break%>
            <% end %>

        </div>
        <div class="col-6">
          <h3><%=tour.title_tour%> </h3>
          <p><%=tour.description%>  </p>
          <p>Duración: <%=tour.duration %> </p>
          <p>Brindado por: <%=tour.agency.name%> </p>
          <p>geocoding: <%=tour.agency.latitude%> - <%=tour.agency.longitude%></p>

        </div>
        <div class="col-3 pt-5 align-items-center" style="text-align:center;">
          <p>Precio <span style="font-size:1.5rem; font-weight: 700;"> S/ <%= tour.price%> </> </p>
            <%= link_to "Ver Más",tour_path(tour), :class => "btn btn-success "%>
        </div>
      </div>
    <% end %>
  </div>
  </div>
  <div class="col-5">
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
