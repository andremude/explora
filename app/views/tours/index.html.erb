<div class="container tour-index">
  <% @tours.each do |tour| %>
    <div class="row card-tour mt-4">
      <div class="col-3">
      </div>
      <div class="col-7">
        <h3><%=tour.title_tour%> </h3>
        <p><%=tour.description%>  </p>
        <p>Duración: <%=tour.duration %> </p>
        <p>Brindado por: <%=tour.agency.name%> </p>

      </div>
      <div class="col-2 pt-5" style="text-align:center;">
        <p>Precio <span style="font-size:1.5rem; font-weight: 700;"> S/ <%= tour.price%> </> </p>
          <%= link_to "Ver Más",'', :class => "btn btn-success "%>
      </div>
    </div>
  <% end %>
</div>
