<div class="container-fluid p-4">
  <div class="container card-create-tour mt-5 mb-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white rounded p-3 shadow">
          <h3>Empecemos a crear tu tour </h3>
          <%= simple_form_for(@tour) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <%= f.input :title_tour, placeholder: 'Full day Huacachina' %>
            <%= f.input :destination, placeholder: 'Ica, Huacachina' %>
            <%= f.input :description, placeholder: 'Un viaje inmemoriable que empieza a las 8:00 am ...' %>
            <%= f.input :duration, placeholder: 'duration' %>
            <%= f.input :price, placeholder: '50' %>
            <%= f.input :photos, as: :file, input_html: { multiple: true } %>
            <%= f.button :submit, class: "btn btn-success p-3 w-100 rounded" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
